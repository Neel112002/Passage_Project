rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Product images: sellers can upload, everyone can read
    match /products/{sellerId}/{allPaths=**} {
      allow read: if true;
      allow write: if isOwner(sellerId);
    }
    
    // User avatars: users can upload their own, everyone can read
    match /avatars/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if isOwner(userId);
    }
    
    // Reels: users can upload their own videos and covers, everyone can read
    match /reels/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if isOwner(userId);
    }
  }
}
